    <script>
function calculateScore() {
  var totalScore = 0;
  
  // Question 1
  var question1Answers = ['a', 'b', 'c','d','e']; // 正确答案
  var question1Selected = []; // 选中的答案
  var question1Score = 10; // 该题得分
  var question1Inputs = document.querySelectorAll('input[name="q1[]"]');
  question1Inputs.forEach(function(input) {
    if (input.checked) {
      question1Selected.push(input.value);
    }
  });
  if (arrayEquals(question1Answers, question1Selected)) {
    totalScore += question1Score;
  }
  
  // Question 2
  var question2Answers = ['a', 'd', 'e']; // 正确答案
  var question2Selected = []; // 选中的答案
  var question2Score = 10; // 该题得分
  var question2Inputs = document.querySelectorAll('input[name="q2[]"]');
  question2Inputs.forEach(function(input) {
    if (input.checked) {
      question2Selected.push(input.value);
    }
  });
  if (arrayEquals(question2Answers, question2Selected)) {
    totalScore += question2Score;
  }
  
  // Question 3
  var question3Answers = ['e']; // 正确答案
  var question3Selected = []; // 选中的答案
  var question3Score = 10; // 该题得分
  var question3Inputs = document.querySelectorAll('input[name="q3[]"]');
  question3Inputs.forEach(function(input) {
    if (input.checked) {
      question3Selected.push(input.value);
    }
  });
  if (arrayEquals(question3Answers, question3Selected)) {
    totalScore += question3Score;
  }
  
  // Question 4
  var question4Answers = ['a', 'c', 'e']; // 正确答案
  var question4Selected = []; // 选中的答案
  var question4Score = 10; // 该题得分
  var question4Inputs = document.querySelectorAll('input[name="q4[]"]');
  question4Inputs.forEach(function(input) {
    if (input.checked) {
      question4Selected.push(input.value);
    }
  });
  if (arrayEquals(question4Answers, question4Selected)) {
    totalScore += question4Score;
  }
  
  // Question 5
  var question5Answers = ['a', 'c', 'd']; // 正确答案
  var question5Selected = []; // 选中的答案
  var question5Score = 10; // 该题得分
  var question5Inputs = document.querySelectorAll('input[name="q5[]"]');
  question5Inputs.forEach(function(input) {
    if (input.checked) {
      question5Selected.push(input.value);
    }
  });
  if (arrayEquals(question5Answers, question5Selected)) {
    totalScore += question5Score;
  }
  
  // Question 6
  var question6Answers = ['a', 'b', 'e']; // 正确答案
  var question6Selected = []; // 选中的答案
  var question6Score = 10; // 该题得分
  var question6Inputs = document.querySelectorAll('input[name="q6[]"]');
  question6Inputs.forEach(function(input) {
    if (input.checked) {
      question6Selected.push(input.value);
    }
  });
  if (arrayEquals(question6Answers, question6Selected)) {
    totalScore += question6Score;
  }
  
  // Question 7
  var question7Answers = ['e']; // 正确答案
  var question7Selected = []; // 选中的答案
  var question7Score = 10; // 该题得分
  var question7Inputs = document.querySelectorAll('input[name="q7[]"]');
  question7Inputs.forEach(function(input) {
    if (input.checked) {
      question7Selected.push(input.value);
    }
  });
  if (arrayEquals(question7Answers, question7Selected)) {
    totalScore += question7Score;
  }
  
  // Question 8
  var question8Answers = ['a', 'c']; // 正确答案
  var question8Selected = []; // 选中的答案
  var question8Score = 10; // 该题得分
  var question8Inputs = document.querySelectorAll('input[name="q8[]"]');
  question8Inputs.forEach(function(input) {
    if (input.checked) {
      question8Selected.push(input.value);
    }
  });
  if (arrayEquals(question8Answers, question8Selected)) {
    totalScore += question8Score;
  }
  
  // Question 9
  var question9Answers = ['a', 'b', 'c']; // 正确答案
  var question9Selected = []; // 选中的答案
  var question9Score = 10; // 该题得分
  var question9Inputs = document.querySelectorAll('input[name="q9[]"]');
  question9Inputs.forEach(function(input) {
    if (input.checked) {
      question9Selected.push(input.value);
    }
  });
  if (arrayEquals(question9Answers, question9Selected)) {
    totalScore += question9Score;
  }
  
  // Question 10
  var question10Answers = ['b']; // 正确答案
  var question10Selected = []; // 选中的答案
  var question10Score = 10; // 该题得分
  var question10Inputs = document.querySelectorAll('input[name="q10[]"]');
  question10Inputs.forEach(function(input) {
    if (input.checked) {
      question10Selected.push(input.value);
    }
  });
  if (arrayEquals(question10Answers, question10Selected)) {
    totalScore += question10Score;
  }
  
  // 更多题目的代码省略
  
  // 最终得分
  document.getElementById("total-score").innerHTML = totalScore;
}

function arrayEquals(a, b) {
  if (a.length !== b.length) return false;
  for (var i = 0; i < a.length; i++) {
    if (a[i] !== b[i]) return false;
  }
  return true;
}
